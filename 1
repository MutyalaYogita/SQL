/* */
/* create a table */
CREATE TABLE student (
    student_id INT PRIMARY KEY,
    name VARCHAR(20),
    major VARCHAR(20)
);

/* view table */
DESCRIBE student;
/* delete table */
DROP TABLE student;
/* add column in table */
ALTER TABLE student ADD gpa DECIMAL(3,2);
/* drop a column */
ALTER TABLE student DROP COLUMN gpa;

/* insert values */
INSERT INTO student VALUES(
    5,'Mike','Computer Science'
);

/*to insert only specific columns */
INSERT INTO student(student_id, major) VALUES(
    3,'Claire' /* did ot add major col here */
);
/* print all details */
SELECT * FROM student;
